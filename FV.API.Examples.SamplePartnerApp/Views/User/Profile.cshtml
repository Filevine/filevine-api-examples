@model UserProfileViewModel
@{
    ViewBag.Title = "User Profile";
}

<div class="content container align-content-center">
    <h1>Welcome @ViewBag.OrgUser.User.FirstName</h1>

   <h2>Filevine user details:</h2>

    <table>
        <tr>
            <td>Native User Id in Filevine:</td>
            <td><em>@ViewBag.OrgUser.OrgUserId.Native</em></td>
        </tr>
        <tr>
            <td>Username:</td>
            <td><em>@ViewBag.OrgUser.User.UserName</em></td>
        </tr>
        <tr>
            <td>First Name:</td>
            <td><em>@ViewBag.OrgUser.User.FirstName </em></td>
        </tr>
        <tr>
            <td>Last Name:</td>
            <td><em>@ViewBag.OrgUser.User.LastName </em></td>
        </tr>
        <tr>
            <td>Email:</td>
            <td><em>@ViewBag.OrgUser.User.Email</em></td>
        </tr>
    </table>
    <p>
        <a
            class="btn btn-secondary"
            asp-area=""
            asp-controller="Auth"
            asp-action="Logout"
            data-toggle="tooltip"
            data-placement="bottom"
            title="User Id: @ViewBag.OrgUser.OrgUserId.Native">
            Logout
        </a>
    </p>

    <h2>Here are your orgs:</h2>

    <table>
        <tr>
            <th>Name:</th>
            <th>OrgId:</th>
        </tr>
        @foreach (var org in ViewBag.Orgs.Orgs)
        {
            <tr>
                <td>@org.Name</td>
                <td>@org.OrgId</td>
            </tr>
        }
    </table>

    <h2>Here are your session details:</h2>

    <table>
    @foreach (var claim in ViewBag.Claims)
    {
        <tr>
            <td>@claim.Type</td>
            <td>@claim.Value</td>
        </tr>
    }
    </table>

    <h2>Here are your token details:</h2>
    <table>
        @foreach (var entry in ViewBag.TokenProperties)
        {
            <dl>
                <dt>@entry.Key</dt>
                <dd>@entry.Value</dd>
            </dl>
        }
    </table>
</div>